<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListaDeTareas.Views.NuevaTarea"
             Title="NuevaTarea">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Nueva Tarea" 
            FontSize="20" 
            HorizontalOptions="Center" 
            VerticalOptions="StartAndExpand" />

        <Entry x:Name="txtNombre" 
               Placeholder="Nombre de la Tarea" />
        
        <Entry x:Name="txtDescripcion" 
               Placeholder="DescripciÃ³n" />
        
        <DatePicker x:Name="datePickerFechaEjecucion" 
                    Format="D" />
        
        <Entry x:Name="txtEstado" 
               Placeholder="Estado" />
       
        <Entry x:Name="txtPrioridad" 
               Placeholder="Prioridad" />

        <Button x:Name="btnGuarda"
                Text="Guardar"  
                Clicked="btnGuarda_Clicked"
                BackgroundColor="#3498db" 
                TextColor="White" />

    </VerticalStackLayout>
</ContentPage>