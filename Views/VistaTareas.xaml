<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListaDeTareas.Views.VistaTareas"
             Title="VistaTareas">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Lista de Tareas" 
               FontSize="20" 
               HorizontalOptions="Center" 
               VerticalOptions="StartAndExpand" />

        <!-- Aquí puedes mostrar la lista de tareas. Puedes usar un ListView o cualquier otro control según tus necesidades. -->

        <Button x:Name="btnNuevaTarea"
                Text="Nueva Tarea"
                Clicked="btnNuevaTarea_Clicked"
                BackgroundColor="#2ecc71" 
                TextColor="White" />


    </VerticalStackLayout>
</ContentPage>